<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo"
    android:layout_height="match_parent"
    tools:context=".InformacionAdministrador">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/audiowide"
                android:text="INFORMACIÃ“N"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_light"
                android:textSize="30dp"></TextView>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@android:drawable/screen_background_light_transparent"
                android:fontFamily="@font/audiowide"
                android:text="Categoria ganada"
                android:textAlignment="center"
                android:textColor="@android:color/black"></TextView>

            <TextView
                android:id="@+id/tvCategoriaGanada"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@android:drawable/screen_background_light_transparent"
                android:fontFamily="@font/audiowide"
                android:textAlignment="center"
                android:textColor="@android:color/black"></TextView>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@android:drawable/screen_background_light_transparent"
                android:fontFamily="@font/audiowide"
                android:text="Valor ganado"
                android:textAlignment="center"
                android:textColor="@android:color/black"></TextView>

            <TextView
                android:id="@+id/tvValorGanado"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:background="@android:drawable/screen_background_light_transparent"
                android:fontFamily="@font/audiowide"
                android:textAlignment="center"
                android:textColor="@android:color/black"></TextView>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@android:drawable/screen_background_light_transparent"
                android:fontFamily="@font/audiowide"
                android:text="Partidos con los que gano"
                android:textAlignment="center"
                android:textColor="@android:color/black"></TextView>

            <TextView
                android:id="@+id/tvPartidosGano"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@android:drawable/screen_background_light_transparent"
                android:fontFamily="@font/audiowide"
                android:textAlignment="center"
                android:textColor="@android:color/black"></TextView>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:fontFamily="@font/audiowide"
                android:text="Seleccione un partido"
                android:textAlignment="center"
                android:textColor="@android:color/black"></TextView>

            <Spinner
                android:id="@+id/spPartidos"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@android:color/white"
                android:fontFamily="@font/audiowide"></Spinner>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@android:drawable/screen_background_light_transparent"
                android:fontFamily="@font/audiowide"
                android:text="Ganador"
                android:textAlignment="center"
                android:textColor="@android:color/black"></TextView>

            <TextView
                android:id="@+id/tvGanadorPartido"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:background="@android:drawable/screen_background_light_transparent"
                android:fontFamily="@font/audiowide"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp"></TextView>

            <Button
                android:id="@+id/btnRevisar"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/black"
                android:fontFamily="@font/audiowide"
                android:text="Revisar ganador"
                android:textColor="@android:color/white"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"></TextView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>