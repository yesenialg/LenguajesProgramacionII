<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Apostador">

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnGanancias"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_action_name"
        android:layout_marginLeft="290dp">
    </Button>

    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/audiowide"
        android:text="APOSTAR"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30dp"></TextView>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Seleccione un partido"
        android:fontFamily="@font/audiowide"
        android:textColor="@android:color/black"
        android:layout_marginLeft="30dp"
        android:background="@android:color/white"
        android:layout_marginTop="130dp"
        android:textAlignment="center"
        ></TextView>

    <Spinner
        android:layout_width="300dp"
        android:id="@+id/lvPartidos"
        android:fontFamily="@font/audiowide"
        android:layout_height="70dp"
        android:background="@android:color/white"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="30dp">
    </Spinner>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Seleccione a su ganador"
        android:fontFamily="@font/audiowide"
        android:textColor="@android:color/black"
        android:layout_below="@+id/lvPartidos"
        android:layout_marginLeft="30dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:layout_marginTop="30dp"
        android:textAlignment="center">
    </TextView>

    <RadioGroup
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:id="@+id/RgrEquipos"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/lvPartidos"
        android:background="@android:drawable/screen_background_light_transparent">

        <RadioButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:fontFamily="@font/audiowide"
            android:id="@+id/RbtnEquipo1"
            android:text="equipo1"
            android:textSize="25dp"
            android:enabled="false">
        </RadioButton>

        <RadioButton
            android:layout_width="200dp"
            android:id="@+id/RbtnEquipo2"
            android:fontFamily="@font/audiowide"
            android:layout_height="50dp"
            android:text="equipo2"
            android:enabled="false"
            android:textSize="25dp">
        </RadioButton>

    </RadioGroup>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Ingrese la cantidad a apostar"
        android:fontFamily="@font/audiowide"
        android:textColor="@android:color/black"
        android:layout_marginLeft="30dp"
        android:background="@android:color/white"
        android:layout_below="@id/RgrEquipos"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        ></TextView>

    <EditText
        android:layout_width="300dp"
        android:id="@+id/CantidadApuesta"
        android:layout_height="70dp"
        android:background="@android:color/white"
        android:layout_marginLeft="30dp"
        android:textAlignment="center"
        android:layout_below="@id/RgrEquipos"
        android:layout_marginTop="50dp">
    </EditText>

    <Button
        android:id="@+id/btnApostar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:fontFamily="@font/audiowide"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="100dp"
        android:text="Apostar">
    </Button>

</RelativeLayout>