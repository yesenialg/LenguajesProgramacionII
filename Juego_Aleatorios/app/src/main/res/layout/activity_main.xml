<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="GENERAR ALEATORIO"
            android:layout_margin="5dp"
            android:id="@+id/btnGenerar1">
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="GENERAR ALEATORIO"
            android:layout_margin="5dp"
            android:id="@+id/btnGenerar2">
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="GENERAR ALEATORIO"
            android:layout_margin="5dp"
            android:id="@+id/btnGenerar3">
        </Button>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="INGRESE UN NUMERO DE TRES CIFRAS"
            android:layout_margin="5dp"
            android:id="@+id/txtNumero">
        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="PUNTOS ACUMULADOS"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:id="@+id/tvPuntos">
        </TextView>


    </LinearLayout>


</RelativeLayout>